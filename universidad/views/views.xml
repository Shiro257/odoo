<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="universidad.list">
      <field name="name">universidad list</field>
      <field name="model">universidad.universidad</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="num"/>
          <field name="numFloat"/>
          <field name="fecha"/>
          <field name="photo"/>
          <field name="prioridad"/>
          <field name="profesores"/>
          <field name="clases"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="universidad.list">
      <field name="name">universidad2 list</field>
      <field name="model">universidad.universidad2</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fechaTiempo"/>
          <field name="photo"/>
          <field name="prioridad"/>
          <field name="prof"/>
          <field name="clases"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="universidad.action_window">
      <field name="name">universidad window</field>
      <field name="res_model">universidad.universidad</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="universidad.action_window2">
      <field name="name">universidad2 window</field>
      <field name="res_model">universidad.universidad2</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
