    <!-- Top menu item -->

    <menuitem name="universidad" id="universidad.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="universidad.menu_1" parent="universidad.menu_root"/>

    <!-- actions -->

    <menuitem name="Universidad" id="universidad.menu_1_list" parent="universidad.menu_1"
              action="universidad.action_window"/>
    <menuitem name="Universidad2" id="universidad.menu_2_list" parent="universidad.menu_1"
              action="universidad.action_window2"/>



  </data>
</odoo>