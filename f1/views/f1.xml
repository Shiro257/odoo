<odoo>
    <data>

        <record model="ir.ui.view" id="f1.f1_list">
            <field name="name">F1 list</field>
            <field name="model">f1.f1</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Equipos"/>
                    <field name="Motores"/>
                    <!--<field name="Pilotos"/>-->
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="f1.action_window">
            <field name="name">F1 window</field>
            <field name="res_model">f1.f1</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="F1" id="f1.menu_1_list" parent="f1.menu_1"
                  action="f1.action_window"/>
    </data>
</odoo>